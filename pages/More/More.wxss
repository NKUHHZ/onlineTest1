/**index.wxss**/
page{
  background: whitesmoke;
}

.userinfo {
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  margin-bottom: 50rpx;
  margin-top:50rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userList{
  display:flex;
  flex-direction: column;
}
.info{
  display: flex;
  flex-direction: row;
  margin-top:50rpx;
}
.userList-attention{
  font-size:30rpx;
  color: gray;
  margin-right: 60rpx;
}
.userList-record{
  font-size:30rpx;
  color:gray;
}
.userinfo-nickname {
  color: #333;
}
.userinfo-unlogin{
  color:blue;
}
.my{
  width: 100%;
  margin: 15rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
}
.my .my-item{
  display: inline-block;
  width: 750rpx;
  background: #ffffff;
  padding: 0
}
.my .my-item .myitem-icon{
  flex: 1;
}
.my .my-item .myitem-icon image{
  width: 45rpx;
  height: 45rpx;
  padding: 37.5rpx 0;
}
.text{
  font-size:35rpx;

}
.my .my-item .myitem-name{

  flex: 5;
  text-align: center;
  font-size: 34rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #ebebeb;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.my .my-item:last-child .myitem-name{
  border-bottom: none;
}

#unread{
  margin-left: 200rpx;
  border-radius: 50%;
  background: red;
  width:60rpx;
  height:60rpx;

}