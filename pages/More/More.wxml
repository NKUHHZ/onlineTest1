<!--index.wxml-->
<view>
  <view class="userinfo" bindtap='tapLogin'>
    <image class="userinfo-avatar" src="{{user_icon}}" background-size="cover"></image>
    <view class="userList">
    <text class="{{loginStatus?'userinfo-nickname':'userinfo-unlogin'}}">{{user_name}}</text>
    <view class="{{loginStatus?'show':'hide'}}">
    <text class="userList-attention">关注我 {{userList.totalAttentionSelf}}</text>
    <text class="userList-record">上传数 {{userList.totalUpdate}}</text>
    </view>
    </view>
  </view>
 <view class="my">
 <block>
  <view class="my-item flex-wrp"  wx:for="{{userOperation}}"wx:key="{{index}}">
      
      <view class="myitem-name flex-item" bindtap="tap" data-index="{{index}}">
        <text class="text">{{item.text}}</text>
        <image src="../../res/arrow-right.png" class = "arrow"></image>
      </view>
    </view>
    </block>
  </view>
</view>