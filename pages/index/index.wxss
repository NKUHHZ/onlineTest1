/**index.wxss**/
page{
  background-color:whitesmoke;
}

.swiper-tab{
  padding-top:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  padding-bottom: 20rpx;
}
.swiper-box{
  height:1000rpx;
}
.swiper-tab-list{
  display: flex;
  text-align: center;
  height:60rpx;
}
.on{
  text-align: center;
  color:#45b97c;
  border-bottom: 1rpx solid #45b97c;
}

.swiper{
  height: 300rpx;
  width: 100%
}
.slide-image{
  height:300rpx;
  width: 100%
}


.themes-box-top{ text-align: center; padding-bottom: 16px; padding-top: 16px; background: #F9F9F9; }
.themes-box-title{ font-size: 20px; font-weight: 300; display: block;color:black; }
.themes-box-subtitle{ font-size: 12px; color: black; display: block; margin-top: 4px; }


.hot-box-more{ text-align: center; font-size: 30rpx; color: #999; margin-bottom: 30px; }

.hot-box-more image{ width: 80px; height: 16px; display: block; margin: 0 auto;}
.textNothing{
  display:flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
}
.moreImage{
  width:80px;
  height:16px;
  flex-direction: row;
  align-items:center;
}
.listImage{
  width:50px;
  height:50px;
}
.storyList{
  width:100%;
  height:150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  border-bottom:solid 1px whitesmoke;
  padding-left: 10rpx;
  margin-bottom: 5rpx;
  box-shadow: 2rpx 2rpx 1rpx #888888;
}
.uploadTime{
  font-weight:300;
  margin:20rpx;
  font-size:30rpx;
  color:#666;
}
.look-number{
  font-weight:300;
   margin:20rpx;
  font-size:30rpx;
  color:#666;
}
.uploadAttention{
  font-weight:400;
  margin:20rpx;
  font-size:30rpx;
  color:#666;
}
.type{
  font-weight:400;
  margin:30rpx;
  font-size:30rpx;
  color:#666;
}
.listword{
  display:flex;
  flex-direction: column;
}
.textNothing{
  font-weight:300;
  height:30px;
  font-size:15px;
  color:#999
}
.hover{
  background-color: #d3d7d4;
}

.buttonView{  /*按钮区的CSS属性*/
  display: flex;
  flex: row;
  justify-content: space-around;
  padding:20rpx;
  background:#F8F8FF;
  margin: 10rpx;
  border:1rpx solid #f6f5ec;
  box-shadow: 5rpx 5rpx 2.5rpx #888888;
}

.notice{ /*按钮区文字的属性*/
  font-family: "宋体";
  padding: 5rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.button1-image{
  border-radius: 50%;
  border:1rpx solid gree;
  width: 80rpx;
  height:80rpx;
  margin:20rpx;
}